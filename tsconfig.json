{
  "compilerOptions": {
    "target": "es2015", // Ensure this is set to at least ES2015
    "lib": ["dom", "dom.iterable", "esnext"], // Include dom.iterable for iteration over Sets
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "downlevelIteration": true // Add this to support downlevel iteration
  },
  "include": ["src"]
}
